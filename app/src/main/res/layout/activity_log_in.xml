<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/label_car"
        android:layout_marginHorizontal="20dp"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/made_waffle"
        android:text="Авторизация"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/logInEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_label"
        android:layout_marginTop="150dp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/logInPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logInEmail"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:background="@drawable/custom_edit_text"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logInEmail"
        android:layout_alignStart="@+id/logInEmail"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-150dp"
        android:fontFamily="@font/roboto_medium"
        android:text="E-mail"
        android:textColor="@color/main_accent"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logInPassword"
        android:layout_alignStart="@+id/logInPassword"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-50dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Пароль"
        android:textColor="@color/main_accent"
        android:textSize="17sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logInPassword"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:backgroundTint="@color/main_accent"
        android:text="Войти"
        app:cornerRadius="10dp" />

    <TextView
        android:id="@+id/textViewCreateAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogIn"
        android:layout_marginTop="10dp"
        android:text="Создать аккаунт"
        android:layout_centerHorizontal="true"
        android:textColor="@color/main_accent"
        android:textSize="17sp"/>


</RelativeLayout>