<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="20dp"
    tools:context=".TabsActivity">



    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_layout"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView9"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/label_car" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/made_waffle"
            android:text="Car"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/made_waffle"
            android:text="Spot"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageViewLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/log_out" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/car_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_layout"
        android:backgroundTint="#D1E3E1"
        android:elevation="10dp"
        android:padding="10dp"
       android:layout_marginVertical="5dp"
        android:layout_weight="5">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="Автомобили"
            android:textColor="@color/main_accent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/made_waffle"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/card_car_rounded" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/information_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_weight="5"
        android:background="@drawable/custom_layout"
        android:backgroundTint="#CADCB5"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/made_waffle"
            android:text="Правовая информация"
            android:textAlignment="center"
            android:textColor="@color/card_secondary_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/documents_rounded" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_weight="5"
        android:background="@drawable/custom_layout"
        android:backgroundTint="#FBF2CC"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/made_waffle"
            android:text="Настройки аккаунта"
            android:textAlignment="center"
            android:textColor="#8E8961"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/account_chainring" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addCar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/custom_layout"
        android:backgroundTint="#F6C5D6"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/plus_car" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/made_waffle"
            android:text="Добавить автомобиль"
            android:textAlignment="center"
            android:textColor="#C1A1AC"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_offers_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/custom_layout"
        android:backgroundTint="#D1FAAE"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/offer_plate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/offer" />

        <TextView
            android:id="@+id/offer_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/made_waffle"
            android:text="Заявки"
            android:textColor="#748A61"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>